# KXW Marketplace Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# FIREBASE CLIENT (Public - used in browser)
# ============================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# ============================================
# FIREBASE ADMIN (Server-side only)
# ============================================
# Option 1: Individual credentials
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Option 2: Base64 encoded service account JSON (alternative)
# FIREBASE_SERVICE_ACCOUNT_KEY=base64_encoded_json

# ============================================
# LZT MARKET API
# ============================================
LZT_API_BASE=https://api.lzt.market
LZT_TOKEN=your_lzt_api_token

# ============================================
# NOWPAYMENTS (Crypto Payments)
# ============================================
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_ipn_secret_key

# ============================================
# UPI PAYMENTS (India)
# ============================================
UPI_VPA=yourname@upi
UPI_MERCHANT_NAME=KXW Marketplace

# ============================================
# APP CONFIG
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
